---
import { getCollection } from 'astro:content';

const allCases = await getCollection('cases');
// 日付順にソートして最新3件を取得（アンダースコアで始まる下書きを除外）
const recentCases = allCases
  .filter(entry => !entry.slug.startsWith('_'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<section class="py-20 bg-[#f9faf7]" id="top-works">
  <div class="max-w-6xl mx-auto px-5">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold font-zen text-gray-800 mb-4 flex items-center justify-center gap-3">
        <span class="w-8 h-[2px] bg-green-700 hidden md:block"></span>
        施工事例
        <span class="w-8 h-[2px] bg-green-700 hidden md:block"></span>
      </h2>
      <p class="text-gray-600 font-medium font-zen">下地からこだわる、リラガーデンの確かな施工実績</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {recentCases.map((caseEntry) => (
        <article class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-500 flex flex-col relative">
          {/* カード全体へのリンク導線1：画像 */}
          <a href={`/cases/${caseEntry.slug}/`} class="relative block overflow-hidden aspect-[16/10]">
            <img 
              src={caseEntry.data.image} 
              alt={caseEntry.data.title} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
            />
            <span class="absolute top-4 left-4 bg-green-700/90 backdrop-blur-sm text-white text-[11px] font-bold px-3 py-1 rounded-full tracking-wider z-10">
              {caseEntry.data.area}
            </span>
            {caseEntry.data.beforeImage && (
              <span class="absolute bottom-4 right-4 bg-black/60 backdrop-blur-sm text-white text-[10px] px-2 py-1 rounded z-10">
                Before Afterあり
              </span>
            )}
          </a>

          <div class="p-8 flex-grow flex flex-col">
            {/* カード全体へのリンク導線2：タイトル */}
            <a href={`/cases/${caseEntry.slug}/`} class="block mb-4">
              <h3 class="text-lg font-bold text-gray-800 line-clamp-2 leading-relaxed font-zen group-hover:text-green-700 transition-colors">
                {caseEntry.data.title}
              </h3>
            </a>
            
            <div class="mt-auto pt-5 border-t border-gray-100 flex items-center justify-between text-sm">
              <div class="flex flex-col gap-1">
                <span class="text-gray-400 text-[10px] uppercase tracking-widest font-sans">Cost</span>
                <span class="font-bold text-gray-700 font-zen">{caseEntry.data.cost}</span>
              </div>
              <div class="flex flex-col gap-1 text-right">
                <span class="text-gray-400 text-[10px] uppercase tracking-widest font-sans">Period</span>
                <span class="font-bold text-gray-700 font-zen">{caseEntry.data.period}</span>
              </div>
            </div>

            {/* カード全体へのリンク導線3：詳細ボタン */}
            <div class="mt-6">
              <a 
                href={`/cases/${caseEntry.slug}/`} 
                class="text-green-700 text-sm font-bold flex items-center w-fit group/btn"
              >
                詳細を見る
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform group-hover/btn:translate-x-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>

    <div class="mt-16 text-center">
      <a 
        href="/cases/" 
        class="inline-flex items-center justify-center px-10 py-4 border-2 border-green-700 text-green-700 font-bold rounded-full hover:bg-green-700 hover:text-white transition-all duration-300 font-zen"
      >
        すべての施工事例を見る
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </a>
    </div>
  </div>
</section>