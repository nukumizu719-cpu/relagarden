<section class="works-section" id="top-works">
  <div class="container">
    <h2 class="section-title">施工事例</h2>

    <div class="instagram-embed-wrapper">
      <iframe 
        src="https://snapwidget.com/embed/1117353" 
        class="snapwidget-widget" 
        title="Posts from Instagram"
        allowtransparency="true" 
        frameborder="0" 
        scrolling="no"
      ></iframe>
    </div>

    <div class="button-area">
      <a 
        href="https://www.instagram.com/relagarden/" 
        target="_blank" 
        rel="noopener"
        class="insta-link-button"
      >
        <img src="/assets/images/instagram.png" alt="" class="insta-icon" />
        <span>Instagramでもっと見る</span>
      </a>
    </div>
  </div>
</section>

<style>
  .works-section {
    padding: 80px 24px;
    background-color: #ffffff;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
  }

  .section-title {
    text-align: center;
    font-size: 2.2rem;
    font-weight: bold;
    margin-bottom: 50px;
    color: #333;
    font-family: 'Zen Maru Gothic', sans-serif;
  }

  /* SnapWidgetのレスポンシブ制御 */
  .instagram-embed-wrapper {
    max-width: 800px;
    margin: 0 auto 40px;
    background: #f9f9f9;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.05);
  }

  .snapwidget-widget {
    width: 100%;
    border: none;
    overflow: hidden;
    /* PCでの高さ設定 */
    height: 510px;
    display: block;
  }

  .button-area {
    text-align: center;
    margin-top: 40px;
  }

  /* Instagramグラデーションボタン */
  .insta-link-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 16px 40px;
    font-size: 1.1rem;
    font-weight: bold;
    color: #fff;
    text-decoration: none;
    border-radius: 999px;
    transition: all 0.3s ease;
    background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
    background-size: 200% auto;
    box-shadow: 0 4px 15px rgba(220, 39, 67, 0.3);
  }

  .insta-link-button:hover {
    background-position: right center;
    transform: translateY(-3px);
    box-shadow: 0 6px 20px rgba(220, 39, 67, 0.4);
  }

  .insta-icon {
    width: 24px;
    height: 24px;
    filter: brightness(0) invert(1); /* 白く反転 */
  }

  /* モバイル対応 (700px以下) */
  @media (max-width: 700px) {
    .works-section {
      padding: 40px 15px;
    }
    
    .section-title {
      font-size: 1.8rem;
      margin-bottom: 30px;
    }

    .snapwidget-widget {
      height: 300px; /* スマホでは高さを抑える */
    }

    .insta-link-button {
      padding: 14px 30px;
      font-size: 1rem;
      width: 100%; /* スマホではフルワイド */
      justify-content: center;
    }
  }
</style>