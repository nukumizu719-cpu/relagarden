  <nav id="mobile-menu" class="mobile-menu">
    <div class="mobile-menu-inner">
      <a href="/about/" class="mobile-nav-item">会社概要</a>
      <a href="/cases/" class="mobile-nav-item">施工事例</a>
      <a href="/contact/" class="mobile-nav-item mobile-contact-btn">お問い合わせフォーム</a>
      <div class="mobile-info-bottom">
        <p class="mobile-hours">営業時間 9:00〜19:00(不定休)</p>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  const body = document.body;

  btn?.addEventListener('click', () => {
    btn.classList.toggle('is-active');
    menu?.classList.toggle('is-active');
    body.classList.toggle('menu-open');
  });
</script>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 2000;
    background: #ffffff;
    border-bottom: 1px solid #e6e6e6;
    width: 100%;
  }

  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 10px 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-logo-link {
    display: block;
    height: 44px;
    flex-shrink: 0;
  }

  .header-logo-img {
    height: 100%;
    width: auto;
    display: block;
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  /* ナビゲーション */
  .pc-nav { display: flex; align-items: center; gap: 15px; margin-right: 10px; }
  .nav-item { text-decoration: none; color: #333; font-weight: bold; font-size: 0.9rem; transition: color 0.3s; }
  .nav-item:hover { color: #2e7d32; }
  .contact-btn { background: #2e7d32; color: #fff !important; padding: 6px 15px; border-radius: 50px; }

  /* 電話・SNSグループ */
  .contact-sns-group { display: flex; align-items: center; gap: 12px; }
  .contact-info { display: flex; flex-direction: column; text-align: right; }
  
  .tel-link {
    display: flex;
    align-items: center;
    gap: 6px;
    color: #2e7d32;
    font-weight: 900;
    font-size: 1.1rem;
    text-decoration: none;
  }

  /* SVGアイコンのスタイル */
  .tel-icon-svg {
    width: 20px;
    height: 20px;
    display: block;
  }
  
  .hours { font-size: 0.65rem; color: #888; margin-top: -2px; }

  .sns-icons { display: flex; gap: 8px; }
  .sns-icons img { width: 28px; height: 28px; transition: opacity 0.3s; }
  .sns-icons img:hover { opacity: 0.7; }

  /* ハンバーガー */
  .menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    width: 40px;
    height: 40px;
    position: relative;
    z-index: 2100;
    padding: 0;
  }
  .bar { display: block; width: 24px; height: 2px; background: #333; position: absolute; left: 8px; transition: 0.3s; }
  .bar-top { top: 13px; }
  .bar-mid { top: 19px; }
  .bar-bottom { top: 25px; }
  .menu-toggle.is-active .bar-top { transform: translateY(6px) rotate(45deg); }
  .menu-toggle.is-active .bar-mid { opacity: 0; }
  .menu-toggle.is-active .bar-bottom { transform: translateY(-6px) rotate(-45deg); }

  /* モバイルドロワー */
  .mobile-menu {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100vh;
    background: rgba(255, 255, 255, 0.98);
    transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: 1500;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .mobile-menu.is-active { right: 0; }
  .mobile-menu-inner { display: flex; flex-direction: column; gap: 24px; text-align: center; width: 80%; }
  .mobile-nav-item { font-size: 1.4rem; font-weight: bold; color: #333; text-decoration: none; border-bottom: 1px solid #eee; padding-bottom: 10px; }
  .mobile-contact-btn { background: #2e7d32; color: #fff; padding: 15px; border-radius: 12px; border: none; }

  /* --- レスポンシブ調整 --- */
  @media (max-width: 1024px) {
    .pc-nav { display: none; }
    .menu-toggle { display: block; }
  }

  @media (max-width: 640px) {
    .header-inner { padding: 8px 12px; }
    .header-logo-link { height: 32px; }
    .tel-num { display: none; } /* スマホではアイコンだけに調整 */
    .tel-link { 
        background: #f1f8f3; 
        width: 38px; 
        height: 38px; 
        border-radius: 10px; /* シックな角丸 */
        justify-content: center;
        gap: 0;
    }
    .tel-icon-svg { width: 22px; height: 22px; }
    .sns-icons img { width: 32px; height: 32px; }
    .contact-sns-group { gap: 10px; }
    .pc-only { display: none; }
  }

  :global(body.menu-open) { overflow: hidden; }
</style>