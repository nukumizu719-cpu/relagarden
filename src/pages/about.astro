---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

const exactTitle = "会社概要 | リラガーデン(RelaGarden)";

const services = [
  "人工芝の施工・販売",
  "ウッドデッキ",
  "フェンス",
  "インターロッキング",
  "花壇",
  "伐採・抜根",
  "砂利敷き",
  "物置設置"
];

// 【完全版】ご提示いただいた座標 (34.98144756771798, 137.14361142919316) をピンポイントで表示
// !3d34.9814475!4d137.1436114 が緯度経度の指定部分です
// 【最終確定版】最新の座標 34.98154799233056, 137.14332266252893 を使用
// 埋め込み用URL (src用)// About.astro の --- 内に貼り付けてください
const googleMapUrl = "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d816.5105342468305!2d137.1435266788268!3d34.98142839820485!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzTCsDU4JzUzLjEiTiAxMzfCsDA4JzM2LjciRQ!5e0!3m2!1sja!2sjp!4v1700000000000!5m2!1sja!2sjp";

const externalMapUrl = "https://www.google.com/maps?q=34.98142839820485,137.1435266788268";
---

<BaseLayout exactTitle={exactTitle}>
  <Header slot="header-slot" />

  <div class="about-page-container">
    <div class="about-header">
      <h1 class="about-title">会社概要</h1>
      <div class="title-underline"></div>
      <p class="about-intro">
        株式会社フォーティーンハーツが運営するリラガーデンの、<br class="pc-only">
        理念・代表挨拶および企業情報についてご紹介いたします。
      </p>
    </div>

    {/* 代表挨拶セクション */}
    <div class="ceo-section">
      <div class="ceo-image">
        <img src="/images/ceo.jpg" alt="代表取締役社長 谷口 徳明" onerror="this.src='https://placehold.jp/24/2e7d32/ffffff/400x500.png?text=CEO+Image'" />
      </div>
      <div class="ceo-content">
        <h2 class="ceo-heading">「お庭」を、一番好きな居場所へ。</h2>
        <div class="ceo-message">
          <p>家族で過ごす週末、お子様が裸足で走り回る時間。お庭は本来、家の中で最も自由で、心地よい場所であるべきだと私たちは考えます。</p>
          <p>しかし、実際には雑草の手入れやメンテナンスに追われ、「手のかかる場所」になってしまっているケースも少なくありません。</p>
          <p>私たちは人工芝の施工を軸に、お客様をメンテナンスの悩みから解放し、笑顔が生まれる理想の空間を提供しています。愛知県岡崎市を拠点に、地域に根ざした誠実な施工をお約束します。</p>
        </div>
        <div class="ceo-signature">
          <span class="ceo-post">代表取締役社長</span>
          <span class="ceo-name">谷口 徳明</span>
        </div>
      </div>
    </div>

    {/* 企業データ */}
    <div class="info-card">
      <h3 class="info-card-title">企業データ</h3>
      <table class="info-table">
        <tbody>
          <tr><th>運営会社</th><td>株式会社フォーティーンハーツ (FOURTEEN HEARTS)</td></tr>
          <tr><th>サービス名</th><td>リラガーデン (RelaGarden)</td></tr>
          <tr><th>創立</th><td>2021年(令和3年) 9月</td></tr>
          <tr><th>所在地</th><td>〒444-0901 愛知県岡崎市森越町字与治43</td></tr>
          <tr><th>事業内容</th><td>造園・外構エクステリア事業全般</td></tr>
          <tr><th>施工メニュー</th>
            <td class="service-tags">
              {services.map(service => <span class="service-tag">{service}</span>)}
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    {/* アクセスマップ（座標指定版） */}
    <div class="map-section">
      <h3 class="info-card-title">アクセス</h3>
      <div class="map-wrapper">
        <iframe 
          src={googleMapUrl}
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade">
        </iframe>
      </div>
      <div class="map-btn-wrapper">
        <a href={externalMapUrl} target="_blank" rel="noopener noreferrer" class="map-external-link">
          Googleマップで大きな地図を見る
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  /* スタイルは一貫性を保ちつつ最適化 */
  .about-page-container { max-width: 1100px; margin: 0 auto; padding: 60px 24px; background-color: #fcfcfc; font-family: 'Zen Maru Gothic', sans-serif; }
  .about-header { max-width: 700px; margin: 0 auto 60px; text-align: center; }
  .about-title { font-size: 2.2rem; font-weight: bold; color: #2e7d32; margin-bottom: 10px; }
  .title-underline { width: 60px; height: 4px; background: #81c784; margin: 0 auto 20px; border-radius: 2px; }
  .about-intro { font-size: 0.95rem; color: #666; line-height: 1.8; }

  .ceo-section { max-width: 950px; margin: 0 auto 80px; display: grid; grid-template-columns: 1fr 1.5fr; gap: 40px; background: #fff; padding: 50px; border-radius: 24px; border: 1px solid #e5e5e5; box-shadow: 0 10px 30px rgba(0,0,0,0.03); }
  .ceo-image img { width: 100%; aspect-ratio: 4/5; object-fit: cover; border-radius: 16px; }
  .ceo-heading { font-size: 1.6rem; color: #2e7d32; font-weight: bold; margin-bottom: 25px; line-height: 1.4; }
  .ceo-message { font-size: 1rem; color: #444; line-height: 1.9; margin-bottom: 30px; }
  .ceo-signature { text-align: right; border-top: 1px solid #eee; padding-top: 20px; }
  .ceo-name { font-size: 1.5rem; font-weight: bold; color: #333; }

  .info-card, .map-section { max-width: 950px; margin: 0 auto 40px; background: #fff; padding: 40px; border-radius: 24px; border: 1px solid #e5e5e5; }
  .info-card-title { font-size: 1.4rem; font-weight: bold; color: #2e7d32; margin-bottom: 30px; display: flex; align-items: center; gap: 10px; }
  .info-card-title::before { content: ""; width: 6px; height: 24px; background: #2e7d32; border-radius: 3px; }

  .info-table { width: 100%; border-collapse: collapse; }
  .info-table th, .info-table td { padding: 22px; border-bottom: 1px solid #f0f0f0; font-size: 1rem; }
  .info-table th { width: 25%; text-align: left; color: #2e7d32; font-weight: bold; vertical-align: top; }
  .info-table td { color: #333; line-height: 1.6; }

  .service-tags { display: flex; flex-wrap: wrap; gap: 10px; }
  .service-tag { background: #f1f8e9; color: #2e7d32; font-size: 0.85rem; font-weight: bold; padding: 6px 16px; border-radius: 30px; border: 1px solid #c8e6c9; }

  .map-wrapper { width: 100%; height: 450px; border-radius: 16px; overflow: hidden; border: 1px solid #eee; }
  .map-btn-wrapper { margin-top: 20px; text-align: center; }
  .map-external-link { display: inline-block; padding: 12px 30px; background-color: #f5f5f5; color: #666; text-decoration: none; border-radius: 30px; font-size: 0.9rem; font-weight: bold; transition: background 0.2s; }
  .map-external-link:hover { background-color: #e0e0e0; }

  @media (max-width: 950px) {
    .ceo-section { grid-template-columns: 1fr; padding: 40px 30px; }
    .ceo-image { max-width: 350px; margin: 0 auto; }
  }

  @media (max-width: 700px) {
    .about-page-container { padding: 40px 15px; }
    .info-table tr { display: flex; flex-direction: column; }
    .info-table th, .info-table td { width: 100%; padding: 10px 0; }
    .info-table th { border-bottom: none; color: #888; font-size: 0.85rem; }
    .info-table td { border-bottom: 1px solid #f0f0f0; margin-bottom: 10px; }
    .map-wrapper { height: 350px; }
  }
</style>