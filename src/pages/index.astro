---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import TopProblems from '../components/TopProblems.astro';
import TopUsp from '../components/TopUsp.astro';
import TopLineup from '../components/TopLineup.astro';
// TopPriceはTopFlowに統合されたため、インポートを削除しました
import TopFlow from '../components/TopFlow.astro';
import TopReview from '../components/TopReview.astro';
import TopWorks from '../components/TopWorks.astro';
import TopContact from '../components/TopContact.astro';

/**
 * 構成のロジック:
 * 1. Hero: ファーストビューでベネフィットを提示
 * 2. TopProblems: 顧客の悩みに共感
 * 3. TopUsp: 自社の強みを提示
 * 4. TopLineup: 扱う人工芝の種類を紹介
 * 5. TopFlow: 施工の流れと詳細な料金目安（旧TopPriceを統合）
 * 6. TopReview: 信頼性の裏付け（口コミ）
 * 7. TopWorks: 実際の施工事例
 * 8. TopContact: 最終的なアクション（CV）
 */
---

<BaseLayout>
  <Hero />
  <TopProblems />
  <TopUsp />
  <TopLineup />
  {/* 料金と工程を1つにまとめたTopFlowを配置 */}
  <TopFlow />
  <TopReview />
  <TopWorks />
  <TopContact />
</BaseLayout>